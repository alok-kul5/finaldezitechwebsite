{
  "project": "Dezitech Engineering - Next.js + TypeScript",
  "version": "1.0.0",
  "framework": "Next.js 14",
  "language": "TypeScript",
  "animationSpecs": {
    "globalEasings": {
      "easeMain": "cubic-bezier(0.2, 0.9, 0.2, 1)",
      "easeMicro": "cubic-bezier(0.22, 0.8, 0.3, 1)"
    },
    "heroHeadline": {
      "initial": {
        "y": 24,
        "opacity": 0
      },
      "animate": {
        "y": 0,
        "opacity": 1
      },
      "transition": {
        "duration": 0.95,
        "delay": 0.12,
        "ease": "cubic-bezier(0.2, 0.9, 0.2, 1)"
      }
    },
    "parallax": {
      "multipliers": [0.01, 0.03, 0.07],
      "lerpFactor": 0.12,
      "springFallback": {
        "stiffness": 80,
        "damping": 18
      }
    },
    "borderStroke": {
      "duration": 0.78,
      "delay": 0.06,
      "ease": "cubic-bezier(0.22, 0.8, 0.3, 1)",
      "reverseOnLeave": {
        "duration": 0.36,
        "ease": "cubic-bezier(0.22, 0.8, 0.3, 1)"
      }
    },
    "cardHover": {
      "scale": 1.035,
      "translateY": -6,
      "shadow": "0 20px 40px rgba(11, 61, 145, 0.08)",
      "transition": {
        "duration": 0.28,
        "ease": "cubic-bezier(0.22, 0.8, 0.3, 1)"
      }
    }
  },
  "components": {
    "created": [
      "components/layout/Navbar.tsx",
      "components/sections/Hero.tsx",
      "components/ui/ProductCard.tsx",
      "components/sections/CapabilitiesSection.tsx",
      "components/sections/IndustriesSection.tsx",
      "components/ui/AnimatedSection.tsx"
    ],
    "utilities": [
      "utils/lerp.ts",
      "utils/useParallax.ts"
    ],
    "config": [
      "next.config.js",
      "tsconfig.json",
      "tailwind.config.js (updated)",
      "app/layout.tsx",
      "app/page.tsx",
      "app/globals.css",
      "lib/framerVariants.ts"
    ]
  },
  "features": {
    "scrollBlurNavbar": true,
    "threeLayerParallax": true,
    "scrollDrivenBorders": true,
    "scrollIndicatorDot": true,
    "cardMorphing": true,
    "prefersReducedMotion": true,
    "exactAnimationSpecs": true
  },
  "tailwindConfig": {
    "containerMaxWidth": 1200,
    "easingTokens": {
      "easeMain": "cubic-bezier(0.2, 0.9, 0.2, 1)",
      "easeMicro": "cubic-bezier(0.22, 0.8, 0.3, 1)"
    }
  }
}

